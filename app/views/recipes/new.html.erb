<%= form_for (@recipe) do |f| %>
  <%= f.label :recipe_title %>
  <br>
  <%= f.text_field :title %>
  <br>
  <%= f.fields_for :ingredients do |i| %>
  <br>
    <%= i.label :ingredient_name %>
    <br>
    <%= i.text_field :name %>
    <br>
    <%= i.label :quantity %>
    <br>
    <%= i.text_field :quantity %>
    <br>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>
